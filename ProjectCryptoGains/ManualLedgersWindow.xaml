<Window x:Class="ProjectCryptoGains.ManualLedgersWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Title="Manual Ledgers" MinWidth="768" MinHeight="768" MaxWidth="1024" MaxHeight="1050" Closing="Window_Closing" mc:Ignorable="d">
    <Grid>
        <TextBox x:Name="txtFileName" Width="450" Height="40" Margin="25,25,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" IsReadOnly="True" Text="" TextWrapping="Wrap" />
        <Button x:Name="btnHelp" Width="40" Height="40" Margin="0,25,25,0" HorizontalAlignment="Right" VerticalAlignment="Top" Click="ButtonHelp_Click">
            <Image x:Name="imgBtnHelp" Width="32" Height="32" Source="Resources/help.png" />
        </Button>
        <Button x:Name="btnBrowse" Width="125" Height="40" Margin="485,25,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ButtonBrowse_Click" Content="Browse" RenderTransformOrigin="1.047,0.821" />
        <Button x:Name="btnUpload" Width="125" Height="40" Margin="25,75,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ButtonUpload_Click" Content="Upload" />
        <DataGrid x:Name="dgLedgers" Margin="25,125,25,25" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Resources>
                <Style x:Key="CellRightAlign">
                    <Setter Property="Control.HorizontalAlignment" Value="Right" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding RowNumber}" Header="ROW__NR" />
                <DataGridTextColumn Binding="{Binding Refid}" Header="REFID" />
                <DataGridTextColumn Binding="{Binding Date}" Header="DATE" />
                <DataGridTextColumn Binding="{Binding Type}" Header="TYPE" />
                <DataGridTextColumn Binding="{Binding Exchange}" Header="EXCHANGE" />
                <DataGridTextColumn Binding="{Binding Asset}" Header="ASSET" />
                <DataGridTextColumn Binding="{Binding Amount, StringFormat='0.0000000000'}"
                                    ElementStyle="{StaticResource CellRightAlign}"
                                    Header="AMOUNT" />
                <DataGridTextColumn Binding="{Binding Fee, StringFormat='0.0000000000'}"
                                    ElementStyle="{StaticResource CellRightAlign}"
                                    Header="FEE" />
                <DataGridTextColumn Binding="{Binding Source}" Header="SOURCE" />
                <DataGridTextColumn Binding="{Binding Target}" Header="TARGET" />
                <DataGridTextColumn Binding="{Binding Notes}" Header="NOTES" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>