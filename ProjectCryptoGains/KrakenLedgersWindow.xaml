<local:SubwindowBase
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ProjectCryptoGains.Common"
        x:Class="ProjectCryptoGains.KrakenLedgersWindow"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:ctzex="clr-namespace:ControlzEx.Behaviors;assembly=ControlzEx"
        Title="Kraken Ledgers"
        MinHeight="768"
        Width="1300"
        MinWidth="768" 
        WindowStyle="SingleBorderWindow">

    <i:Interaction.Behaviors>
        <ctzex:WindowChromeBehavior ResizeBorderThickness="6" 
                                    EnableMinimize="True" 
                                    EnableMaxRestore="True" 
                                    KeepBorderOnMaximize="True"/>
    </i:Interaction.Behaviors>
    <Border BorderBrush="#444444" BorderThickness="1" Background="#1E1E1E">
        <Grid>
            <!-- Title Bar -->
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar with Window Control Buttons -->
            <Grid x:Name="TitleBar" Background="#2B2B2B">
                <TextBlock Text="Kraken Ledgers" 
                           HorizontalAlignment="Left" 
                           VerticalAlignment="Center" 
                           Margin="10,0,0,0"
                           Foreground="White"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0">
                    <Button Content="—"
                            Width="30" Height="30" Click="Minimize_Click"/>
                    <Button Content="❐"
                            Width="30" Height="30" Click="Resize_Click"/>
                    <Button Content="X"
                            Width="30" Height="30" Click="Close_Click"/>
                </StackPanel>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid>
                    <TextBox x:Name="txtFileName" Width="450" Height="40" Margin="25,25,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" IsReadOnly="True" Text="" TextWrapping="Wrap" />
                    <Button x:Name="btnBrowse" Width="125" Height="40" Margin="485,25,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ButtonBrowse_Click" Content="Browse" RenderTransformOrigin="1.047,0.821" />
                    <Button Style="{StaticResource SquareButtonStyle}" x:Name="btnHelp" Width="40" Height="40" Margin="0,25,25,0" HorizontalAlignment="Right" VerticalAlignment="Top" Click="ButtonHelp_Click">
                        <Image x:Name="imgBtnHelp" Width="32" Height="32" Source="Resources/help.png" />
                    </Button>
                    <Button x:Name="btnUpload" Width="125" Height="40" Margin="25,75,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ButtonUpload_Click" Content="Upload" />
                    <DataGrid x:Name="dgLedgers" Margin="25,125,25,25" AutoGenerateColumns="False" IsReadOnly="True" CanUserReorderColumns="False">
                        <DataGrid.Resources>
                            <Style x:Key="CellRightAlign">
                                <Setter Property="Control.HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding RowNumber}" Header="ROW__NR" />
                            <DataGridTextColumn Binding="{Binding Txid}" Header="TXID" />
                            <DataGridTextColumn Binding="{Binding Refid}" Header="REFID" />
                            <DataGridTextColumn Binding="{Binding Time}" Header="TIME" />
                            <DataGridTextColumn Binding="{Binding Type}" Header="TYPE" />
                            <DataGridTextColumn Binding="{Binding Subtype}" Header="SUBTYPE" />
                            <DataGridTextColumn Binding="{Binding Aclass}" Header="ACLASS" />
                            <DataGridTextColumn Binding="{Binding Asset}" Header="ASSET" />
                            <DataGridTextColumn Binding="{Binding Wallet}" Header="WALLET" />
                            <DataGridTextColumn Binding="{Binding Amount, StringFormat='0.0000000000'}"
                                    ElementStyle="{StaticResource CellRightAlign}"
                                    Header="AMOUNT" />
                            <DataGridTextColumn Binding="{Binding Fee, StringFormat='0.0000000000'}"
                                    ElementStyle="{StaticResource CellRightAlign}"
                                    Header="FEE" />
                            <DataGridTextColumn Binding="{Binding Balance, StringFormat='0.0000000000'}"
                                    ElementStyle="{StaticResource CellRightAlign}"
                                    Header="BALANCE" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</local:SubwindowBase>